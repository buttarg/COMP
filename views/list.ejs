<!DOCTYPE html>
<html>
  <%- include partials/Head -%> 
  

  <body>   
    <div class="container-fluid">
      <div class="row">
        <div class="col-md">
      
          <%- include partials/NavBar -%>        
          </div>
          </div>  
        </div>
        <br>
        <div>
            <a href="/inventory/add" class="btn btn-primary align-self-end" role="button">
                <i class="fas fa-plus-circle"></i> 
                Add a new Item
            </a>                
        </div>
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <tr>
                    <th class="text-center">Name</th>
                    <th class="text-center">Contact Number</th>
                    <th class="text-center">Email Address</th>
                    
                    <th class="text-center">Tags</th>
                    <th class="text-center" colspan="2">Actions</th>
                </tr>

                <!-- Repeatable Template Row -->

                <% for(let i = 0; i < InventoryList.length; i++) { %>
                    <tr>
                        <td class="text-center"><%= InventoryList[i].Name %></td>
                        <td class="text-center"><%= InventoryList[i].ContactNumber %></td>
                        <td class="text-center"><%= InventoryList[i].EmailAddress %></td>
                       
                        <td class="text-center"><%= InventoryList[i].tags %></td>
                        <td class="text-center">
                            <a href="/inventory/edit/<%= InventoryList[i]._id %>" class="btn btn-primary btn-sm">
                            <i class="fas fa-pencil-alt"></i></a>
                        </td>
                        <td class="text-center">
                            <a href="/inventory/delete/<%= InventoryList[i]._id %>" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                <% } %>
            </table>
         </div>  
          <%- include partials/Footer -%> 
        </body>
    

</html>
